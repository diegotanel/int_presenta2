#encoding: utf-8
<% provide(:title, 'Busqueda de persona juridica') %>
<h2>Buscar persona jurídica</h2>

<div class="row">
  <div class="span6 offset3">
		<%= form_tag(buscar_juridica_por_cuit_formulario_persona_juridica_e_path(@formulario, 1), method: 'post')  do %>
			<p>Ingrese el numero de Cuit de la persona jurídica que quiere buscar (sin guiones ni puntos)</p>
			<%= text_field_tag :numero_cuit %>
			</br>
			<%= submit_tag "Iniciar busqueda", class: "btn btn-large btn-medium" %>
		<% end %>
		</br>
		<%= link_to "Persona Jurídica nueva", new_formulario_persona_juridica_path(params[:formulario_id]), class: "btn btn-large btn-primary" %>
		</br>
  </div>
</div>
</br>
</br>
<%= link_to t('Volver a campos de datos'), edit_formulario_path(@formulario) %>