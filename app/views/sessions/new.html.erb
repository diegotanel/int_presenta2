#encoding: utf-8
<% provide(:title, "Iniciar Sesión") %>
<h1>Iniciar Sesión</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Contraseña" %>
      <%= f.password_field :password %>
      </br>

      <%= f.submit "Iniciar Sesión", class: "btn btn-large btn-primary" %>
    <% end %>
    <p><%= link_to "Olvido su contraseña?", new_password_recover_path %></p>
    <p>Nuevo Usuario? <%= link_to "Registrate Ahora!", signup_path %></p>
  </div>
</div>
