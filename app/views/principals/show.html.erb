<% provide(:title, 'Sus datos principales') %>
<div class="row">
  <aside class="span4">
    <section>
      <p>
				<b>Provincia:</b>
				<%= @principal.provincia.detalle %>
			</p>

			<p>
				<b>Localidad:</b>
				<%= @principal.localidad.detalle %>
			</p>

			<p>
				<b>Grupo o Espectáculo Concertado:</b>
				<%= @principal.grupo.detalle %>
			</p>

			<p>
				<b>Nombre del espectáculo:</b>
				<%= @principal.nombre %>
			</p></br>

			<h3>Datos del Contacto</h3></br>
			
			<p>
				<b>Nombre del contacto:</b>
				<%= @principal.nombre_contacto %>
			</p>

			<p>
				<b>Apellido del contacto:</b>
				<%= @principal.apellido_contacto %>
			</p>

			<p>
  			<b>Teléfono particular del contacto:</b>
  			<%= @principal.prefijo_tel_part + " " + @principal.tel_particular %>
			</p>

			<p>
  			<b>Teléfono celular del contacto:</b>
  			<%= @principal.prefijo_tel_cel + " " + @principal.tel_celular %>
			</p>
			</br>
			
			<%= link_to t('Volver a campos de datos'), edit_formulario_path(@formulario) %>

    </section>
  </aside>
</div>